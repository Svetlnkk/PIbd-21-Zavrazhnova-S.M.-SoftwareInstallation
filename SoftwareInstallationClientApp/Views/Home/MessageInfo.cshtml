@{
    ViewData["Title"] = "MessageInfo";
}

<div class="text-center">
    <h1 class="display-4">Письма</h1>
</div>


<div class="text-center">
    @{
        <table class="table">
            <thead>
                <tr>
                    <th>
                        Отправитель
                    </th>
                    <th>
                        Дата письма
                    </th>
                    <th>
                        Заголовк
                    </th>
                    <th>
                        Текст
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in ViewBag.MessagesInfo)
                {
                    <tr>
                        <td>
                            @item.SenderName
                        </td>
                        <td>
                            @item.DateDelivery
                        </td>
                        <td>
                            @item.Subject
                        </td>
                        <td>
                            @item.Body
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <form>
            <button asp-action="PrevMailsPage" class="btn btn-primary">Назад</button>
            <input type="text" name="pageNumber" value="@ViewBag.PageNumber" size="5" />
            <button asp-action="NextMailsPage" class="btn btn-primary">Вперёд</button>
        </form>
    }
</div>